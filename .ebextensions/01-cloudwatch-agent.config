files:
  "/opt/aws/amazon-cloudwatch-agent/etc/amazon-cloudwatch-agent.json":
    mode: "000644"
    owner: root
    group: root
    content: |
      {
        "logs": {
          "logs_collected": {
            "files": {
              "collect_list": [
                {
                  "file_path": "/var/log/web.stdout.log",
                  "log_group_name": "/elasticbeanstalk/python/application",
                  "log_stream_name": "{instance_id}"
                },
                {
                  "file_path": "/var/log/web.error.log",
                  "log_group_name": "/elasticbeanstalk/python/application",
                  "log_stream_name": "{instance_id}"
                },
                {
                  "file_path": "/var/log/nginx/access.log",
                  "log_group_name": "/elasticbeanstalk/python/nginx",
                  "log_stream_name": "{instance_id}"
                },
                {
                  "file_path": "/var/log/nginx/error.log",
                  "log_group_name": "/elasticbeanstalk/python/nginx",
                  "log_stream_name": "{instance_id}"
                },
                {
                  "file_path": "/var/log/messages",
                  "log_group_name": "/elasticbeanstalk/python/system",
                  "log_stream_name": "{instance_id}"
                },
                {
                  "file_path": "/var/log/secure",
                  "log_group_name": "/elasticbeanstalk/python/system",
                  "log_stream_name": "{instance_id}"
                }
              ]
            }
          }
        }
      }